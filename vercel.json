{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "env": {
      "APP_KEY": "@app_key",
      "DB_CONNECTION": "@db_connection",
      "DB_HOST": "@db_host",
      "DB_PORT": "@db_port",
      "DB_DATABASE": "@db_database",
      "DB_USERNAME": "@db_username",
      "DB_PASSWORD": "@db_password"
    },
    "build": {
      "env": {
        "COMPOSER_ALLOW_SUPERUSER": "1",
        "COMPOSER_HOME": "/vercel/.composer"
      }
    }
  }
  